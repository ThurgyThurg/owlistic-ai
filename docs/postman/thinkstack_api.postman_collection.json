                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "notes", "{{noteId}}"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Updated Note\",\n    \"content\": \"This note has been updated\",\n    \"tags\": [\"updated\", \"api\"],\n    \"is_deleted\": false\n}"
                        }
                    }
                },
                {
                    "name": "Delete Note",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notes/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "notes", "{{noteId}}"]
                        }
                    }
                }
            ]
        },
