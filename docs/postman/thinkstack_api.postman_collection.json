{
    "info": {
        "name": "ThinkStack API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Notes",
            "item": [
                {
                    "name": "Create Note",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notes",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "notes"]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Test Note\",\n    \"content\": \"This is a test note\",\n    \"user_id\": \"{{userId}}\",\n    \"tags\": [\"test\", \"api\"],\n    \"is_deleted\": false\n}"
                        }
                    }
                },
                {
                    "name": "Get Notes",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notes",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "notes"]
                        }
                    }
                },
                {
                    "name": "Get Note by ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notes/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "notes", "{{noteId}}"]
                        }
                    }
                },
                {
                    "name": "Update Note",
                    "request": {
                        "method": "PUT",
